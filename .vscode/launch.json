{
  // Configuraci√≥n de launch.json para ejecutar y depurar pruebas con pnpm
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TSX Execution",
      "runtimeExecutable": "pnpx",
      "args": ["tsx", "--watch", "src/main/index.ts"],
      "smartStep": true,
      "console": "integratedTerminal",
      "envFile": "${workspaceRoot}/.env",
      "cwd": "${workspaceRoot}"
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests with pnpm",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests for Current File with pnpm",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test", "${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}